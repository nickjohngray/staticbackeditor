    "global": "^4.4.0",
    "immer": "^7.0.7",
    "less-loader": "^6.2.0",
    "lodash": "^4.17.19",
    "mongodb": "^3.5.9",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.0.3",
    "redux": "^4.0.5",
    "redux-actions": "^2.6.5",
    "redux-undo": "^1.0.1",
    "simple-git": "^2.15.0",
    "tslint": "^6.1.3"
  },
