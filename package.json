{
  "name": "express-react-typescript",
  "version": "2.1.1",
  "description": "An Express, React with Typescript and Less boilerplate",
  "main": "src/server/index.js",
  "scripts": {
    "build": "webpack --mode production",
    "start": "npm run build && node src/server/index.js",
    "client": "webpack-dev-server --mode development --devtool inline-source-map --hot",
    "server": "nodemon src/server/index.js",
    "server2": "nodemon --watch '**/*.ts' --exec 'ts-node' src/server/index.ts",
    "server3": "tsc-watch --onSuccess \"node ./dist/server/index.js\"",
    "dev": "concurrently \"npm run server3\" \"npm run client\"",
    "tsc-watches-but-brakes-proxy": "tsc -w && nodemon dist/server/index.js"
  },
  "author": "Nick Gray",
  "license": "Apache License 2.0",
  "dependencies": {
    "@types/mongodb": "^3.5.25",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "axios": "^0.19.2",
    "babel-polyfill": "^6.26.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "global": "^4.4.0",
    "less-loader": "^6.2.0",
    "mongodb": "^3.5.9",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "simple-git": "^2.15.0"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@types/express": "^4.17.7",
    "awesome-typescript-loader": "^5.2.1",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "^5.2.0",
    "copy-webpack-plugin": "^6.0.3",
    "css-loader": "^4.2.0",
    "eslint": "^7.5.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.4",
    "extract-css-chunks-webpack-plugin": "^4.7.5",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.3.0",
    "http-proxy-middleware": "^1.0.5",
    "jest": "^26.1.0",
    "mini-css-extract-plugin": "^0.9.0",
    "nodemon": "^1.17.3",
    "postcss-loader": "^3.0.0",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.23.1",
    "tsc-watch": "^4.2.9",
    "typescript": "^3.4.5",
    "url-loader": "^1.0.1",
    "webpack": "^4.5.0",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.3"
  },
  "proxy": "http://localhost:8050"
}
