    "@types/mongodb": "^3.5.25",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "@types/redux-actions": "^2.6.1",
    "axios": "^0.19.2",
    "babel-polyfill": "^6.26.0",
