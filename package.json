{
  "name": "express-react-typescript",
  "version": "2.1.1",
  "description": "An Express, React with Typescript and Less boilerplate",
  "main": "src/server/index.js",
  "scripts": {
    "build-server-dev": "webpack --mode development",
    "build-server-prod": "webpack --mode production",
    "start-server-prod": "npm run build-server-prod && node src/server/index.js",
    "start-server-dev": "npm run build-server-dev && node src/server/index.js",
    "client": "webpack-dev-server --mode development --devtool inline-source-map --hot",
    "server": "tsc-watch --onSuccess \"node ./dist/server/index.js\"",
    "dev": "concurrently \"npm run build-server-dev\"  \"npm run server\" \"npm run client\"",
    "repo-install": "npm i --prefix ${arg[0]}",
    "repo-start": "npm start --prefix ${arg[0]}",
    "checkcss": "npx stylelint \"src/**/*.css\" --fix",
    "checkts": "tslint --project tsconfig.json --config tslint.json --fix"
  },
  "author": "Nick Gray",
  "license": "Apache License 2.0",
  "dependencies": {
    "@fortawesome/free-solid-svg-icons": "^5.14.0",
