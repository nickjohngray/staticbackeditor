{
    "extends": [
        "tslint:recommended"

    ],


    "jsRules": false,
    "linterOptions": {
        "exclude": [
            "**/node_modules/**/*",
            "**/_test_/**/*",
            "**/*.js"
        ]
    },
    "rules": {
        "no-shadowed-variable": false,
        "promise-function-async": { "severity": "error" },
        "prefer-for-of" : false,
        "no-irregular-whitespace": true,
        "no-trailing-whitespace": true,
        "align": true,
        "no-consecutive-blank-lines": true,
        "trailing-comma": false,
        "quotemark": [true, "single", "jsx-double", "avoid-escape"],
        "semicolon": [true,"never"],
        "object-literal-sort-keys": false,
        "interface-name": [true, "always-prefix"],
        "await-promise": false,

        "no-empty": {
            "options": ["allow-empty-catch"],
            "severity": "default"
        },
        "arrow-return-shorthand": true,
        "class-name": true,
        "curly": [
            true,
            "ignore-same-line"
        ],
        "cyclomatic-complexity": true,
        "member-access": [
            true,
            "no-public"
        ],
        "member-ordering": [
            true,
            {
                "order": "statics-first"
            }
        ],
        "no-console": false,
        "no-duplicate-imports": { "severity": "error" },
        "no-magic-numbers": false,
        "no-implicit-dependencies": false,
        "no-parameter-reassignment": { "severity": "error" },
        "no-return-await": { "severity": "error" },
        "no-string-literal": { "severity": "error" },
        "no-unnecessary-initializer": { "severity": "error" },
        "ordered-imports": false,
        "prefer-const": false,
        "prefer-template": false,
        "switch-default": { "severity": "error" },
        "triple-equals": { "severity": "error" },
        "use-isnan": { "severity": "error" }
    },
    "rulesDirectory": []
}
